<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" id="airline-input">
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
      <option value="Delta">Delta</option>
      <option value="Jet Blue">Jet Blue</option>
    </select>
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
      <option value="JFK">JFK</option>
      <option value="LGA">LGA</option>
    </select>
    <label for="flightNo-input">Flight No.:</label>
    <input type="text" name="flightNo" id="flightNo-input" value="<%= flight.flightNo %>">
    <label for="depars-input">Departs:</label>
    <input type="datetime-local" name="departs" id="departs-input" value="<%= flight.departs %>">
    <button type="submit">Update Flight</button>
  </form>
</main>

<%- include('../partials/footer') %>