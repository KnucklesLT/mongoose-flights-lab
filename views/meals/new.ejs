<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/meals/new.css" />
<%- include('../partials/nav') %>

<main>
	<h1><%= title %></h1>
  <form id="add-meal-form" action="/meals" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input" autocomplete="off">
    <button type="submit">Add Meal</button>
  </form>
  <h2>Please make sure the Meal is not in this list</h2>
  <div>
    <ul>
        <% meals.forEach(function(meal) { %>
          <il><%= meal.name %></il><br>
        <% }) %>
    </ul>
  </div>  
</main>

